services:
    wireguard:
      image: lscr.io/linuxserver/wireguard
      networks:
        - ddome
      cap_add:
        - NET_ADMIN
        - SYS_MODULE
      environment:
        PUID: "1000"
        PGID: "1000"
        TZ: "Europe/Amsterdam"
      volumes:
        - "{{ media_station_config_dir }}/wireguard-config:/config"
      sysctls:
        - net.ipv4.conf.all.src_valid_mark=1
      restart: unless-stopped
    jellyfin:
      image: linuxserver/jellyfin
      devices:
        - /dev/dri:/dev/dri
      networks:
        - ddome
      environment:
        - PUID={{ media_station_uid }}
        - PGID={{ media_station_gid }}
      volumes:
        - jellyfin-config:/config
        - jellyfin-cache:/cache
        - series-dir:/data/tvseries
        - movies-dir:/data/movies
      restart: unless-stopped
      labels:
        - "homepage.group=Media"
        - "homepage.name=Jellyfin"
        - "homepage.icon=jellyfin.png"
        - "homepage.href=https://jellyfin.bfkr.dev"
        - "homepage.description=Media server"
        - "kuma.jellyfin.http.name=Jellyfin"
        - "kuma.jellyfin.http.url=https://jellyfin.bfkr.dev"
    jellyseerr:
      image: fallenbagel/jellyseerr:latest
      network_mode: service:wireguard
      environment:
        - LOG_LEVEL=info
        - TZ=Europe/Amsterdam
        - PORT=5055
      volumes:
        - jellyseerr-config:/app/config
      restart: unless-stopped
      labels:
        - "homepage.group=Media"
        - "homepage.name=Jellyseerr"
        - "homepage.icon=jellyseerr.png"
        - "homepage.href=https://netflix.bfkr.dev"
        - "homepage.description=Media requests"
        - "kuma.jellyseerr.http.name=Jellyseerr"
        - "kuma.jellyseerr.http.url=https://netflix.bfkr.dev"
    sabnzbd:
      image: lscr.io/linuxserver/sabnzbd:latest
      network_mode: service:wireguard
      environment:
        - PUID={{ media_station_uid }}
        - PGID={{ media_station_gid }}
        - TZ=Europe/Amsterdam
      volumes:
        - sabnzbd-config:/config
        - '{{ media_station_data_dir }}/usenet:/media-station/usenet'
      restart: unless-stopped
      labels:
        - "homepage.group=Media"
        - "homepage.name=SABnzbd"
        - "homepage.icon=sabnzbd.png"
        - "homepage.href=https://downloader.bfkr.dev"
        - "homepage.description=Usenet downloader"
        - "kuma.sabnzbd.http.name=SABnzbd"
        - "kuma.sabnzbd.http.url=https://downloader.bfkr.dev"
    radarr:
      image: lscr.io/linuxserver/radarr:latest
      network_mode: service:wireguard
      environment:
        - PUID={{ media_station_uid }}
        - PGID={{ media_station_gid }}
        - TZ=Europe/Amsterdam
      volumes:
        - radarr-config:/config
        - '{{ media_station_data_dir }}:/media-station'
      restart: unless-stopped
      labels:
        - "homepage.group=Media"
        - "homepage.name=Radarr"
        - "homepage.icon=radarr.png"
        - "homepage.href=https://radarr.bfkr.dev"
        - "homepage.description=Movie library automation"
        - "kuma.radarr.http.name=Radarr"
        - "kuma.radarr.http.url=https://radarr.bfkr.dev"
    sonarr:
      image: lscr.io/linuxserver/sonarr:latest
      network_mode: service:wireguard
      environment:
        - PUID={{ media_station_uid }}
        - PGID={{ media_station_gid }}
        - TZ=Europe/Amsterdam
      volumes:
        - sonarr-config:/config
        - '{{ media_station_data_dir }}:/media-station'
      restart: unless-stopped
      labels:
        - "homepage.group=Media"
        - "homepage.name=Sonarr"
        - "homepage.icon=sonarr.png"
        - "homepage.href=https://sonarr.bfkr.dev"
        - "homepage.description=Series library automation"
        - "kuma.sonarr.http.name=Sonarr"
        - "kuma.sonarr.http.url=https://sonarr.bfkr.dev"

networks:
    ddome: 
        external: true

volumes:
    sonarr-config:
      driver: local
      driver_opts:
        type: none
        o: bind
        device: '{{ media_station_config_dir }}/sonarr/config'
    radarr-config:
      driver: local
      driver_opts:
        type: none
        o: bind
        device: '{{ media_station_config_dir }}/radarr/config'
    jellyseerr-config:
      driver: local
      driver_opts:
        type: none
        o: bind
        device: '{{ media_station_config_dir }}/jellyseerr/config'
    sabnzbd-config:
      driver: local
      driver_opts:
        type: none
        o: bind
        device: '{{ media_station_config_dir }}/sabnzbd/config'
    jellyfin-config:
      driver: local
      driver_opts:
        type: none
        o: bind
        device: '{{ media_station_config_dir }}/jellyfin/config'
    jellyfin-cache:
      driver: local
      driver_opts:
        type: none
        o: bind
        device: '{{ media_station_config_dir }}/jellyfin/cache'
    movies-dir:
      driver: local
      driver_opts:
        type: none
        o: bind
        device: '{{ media_station_data_dir }}/media/movies'
    series-dir:
      driver: local
      driver_opts:
        type: none
        o: bind
        device: '{{ media_station_data_dir }}/media/series'
