version: '3.2'

services:
  changedetection:
    image: ghcr.io/dgtlmoon/changedetection.io
    container_name: changedetection
    hostname: changedetection
    environment: 
     - PUID=1000
     - PGID=1000
    volumes:
     - {{ changedetection_config_dir }}:/datastore
    restart: unless-stopped
    networks:
     - ddome

networks:
    ddome: 
        external: true


